 <div class="row">
    <div class="col-md-3">
      <h1>Sign up</h1>

          <%= bootstrap_form_for(@user) do |f| %>
          <%= render 'shared/error_messages' %>
          <%= f.text_field :name, :lenght => "50" %>
          <%= f.email_field :email %>
          <%= f.password_field :password %>
          <%= f.password_field :password_confirmation   %>
          <%= f.submit "Fucking Submit" %>
          <% end %>
    </div>
  </div>      
